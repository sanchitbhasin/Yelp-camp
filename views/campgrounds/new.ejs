<% include ../partials/header %>

<form action="/camps" method="POST">
    <div class="container">
        <h3 class="display-4" style="text-align: center; margin: 50px">Add new Camp Site</h3>
        <div style="width: 30%; margin: 0 auto">
            <div class="form-group">
                <input type="text" placeholder="camp name" name="cname" class="form-control">
            </div>
            <div class="form-group">
                <input type="number" placeholder="camp price" name="cprice" class="form-control" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input type="url" name="cimage" placeholder="add image url" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" name="cdescription" placeholder="add description" class="form-control">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                <a href="/camps">go back...</a>
            </div>
        </div>
    </div>
</form>



