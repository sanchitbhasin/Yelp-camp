<% include ../partials/header %>



<form action="/camps/<%= campground._id %>/comments" method="POST">
    <div class="container">
        <h3 class="display-4" style="text-align: center; margin: 50px">Add new Comment to <%= campground.name %></h3>
        <div style="width: 30%; margin: 0 auto">
            <div class="form-group">
                <input type="text" name="comment[text]" placeholder="text" class="form-control">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                <a href="/camps/<%= campground._id %>">go back...</a>
            </div>
        </div>
    </div>
</form>



